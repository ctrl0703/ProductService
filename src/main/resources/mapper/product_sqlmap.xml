			,a.PRDIMG2ND
			,a.PRDIMG1ST
 			,a.PRDIMG
			,a.PRDVOL
			,a.PRDENGNM
			,a.PRDNMS
			,a.P_TYPE
			,a.MAXPURQTY
			,a.PRDNMSCOLOR
			,a.USECAREDESC
			,a.QADESC
			,a.ASDESC
			,a.USEENDDATE
			,a.SALFL
			,a.MASSPURFL
			,a.SITEHIDEFL
			,a.PRDCOMPDESC
			,a.PRDUSEDESC
			,a.PRDAUDITDESC
			,a.PRDTYPECD
			,a.PRDDSPIMG1
			,a.PRDDSPIMG2
			,a.PRDDTLHTMLURL
			,a.HASHTAG
			,b.SAPPRDCD 
			,b.ORDERBY 
			,b.KINDNM 
			,b.STKSTAT 
			,b.BARCODE 
			,a.STDPRC 
	FROM PRODUCTMT a, PRODUCTDT b
	where a.prdseq = b.prdseq
	
</select>

<select id="selectCategory" resultMap="category">
	select CATEGORY_CODE
		  ,NAME 
		  ,CAT_ORDER
	from category
	
</select>




