	<result property="order" column="CAT_ORDER"/>
</resultMap>


<select id="selectProduct" resultMap="product">
	SELECT   a.PRDSEQ
			,a.PRDNM
			,a.BASICDESC
			,a.SALPRC
			,a.STDPRC
			,a.STKSTAT
			,a.MNUFACTAREA
			,a.MNUFACT
			,a.UPDID
 			,a.UPDDATE
			,a.PRDIMG2ND
			,a.PRDIMG1ST
 			,a.PRDIMG
			,a.PRDVOL
			,a.PRDENGNM
			,a.PRDNMS
			,a.P_TYPE
			,a.MAXPURQTY
			,a.PRDNMSCOLOR
			,a.USECAREDESC
			,a.QADESC
			,a.ASDESC
			,a.USEENDDATE
			,a.SALFL
			,a.MASSPURFL
			,a.SITEHIDEFL
			,a.PRDCOMPDESC
			,a.PRDUSEDESC
			,a.PRDAUDITDESC
			,a.PRDTYPECD
			,a.PRDDSPIMG1
			,a.PRDDSPIMG2
			,a.PRDDTLHTMLURL
			,a.HASHTAG
			,b.SAPPRDCD 
			,b.ORDERBY 
			,b.KINDNM 
			,b.STKSTAT 
			,b.BARCODE 
			,a.STDPRC 
	FROM PRODUCTMT a, PRODUCTDT b
	where a.prdseq = b.prdseq
	  and a.prdseq = #{prdseq}
</select>



